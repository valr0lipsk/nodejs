<div class="posts">
    <div class="posts__container">
        <h2 class="posts__title">Posts</h2>
        <div class="posts__block">
            {{#each posts}}
                <div class="post">
                    <h2 class="post__title">
                        {{ title }}
                    </h2>
                    {{#if excerpt}}
                        <p class="post__body">
                            {{ excerpt }}
                        </p>
                    {{/if}}
                    <p class="post__author">    
                        Created by: {{ author.name }}
                    </p>
                    <div class="post__tags">
                        {{#each tags}}
                            <p>&#35;{{name}}</p>
                        {{/each}}
                    </div>
                    <div class="post__categories">
                        {{#each categories}}
                            <p>{{name}}</p>
                        {{/each}}
                    </div>
                    <p class="post__date">Created at: {{createdAt}}</p>
                    <p class="post__date">Updated at: {{updatedAt}}</p>
                </div>
            {{/each}}
        </div>
    </div>
</div>